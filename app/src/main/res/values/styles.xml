<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- ...and here we setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/material_drawer_primary</item>
        <item name="colorPrimaryDark">@color/material_drawer_primary_dark</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/colorPrimary</item>
        <item name="material_drawer_primary_text">@color/amber_a700</item>
        <item name="material_drawer_primary_icon">@color/amber_a700</item>
        <item name="material_drawer_secondary_text">@color/amber_a700</item>
        <item name="material_drawer_hint_text">@color/white</item>
        <item name="material_drawer_divider">@color/gray</item>
        <item name="material_drawer_selected">@color/amber_a700</item> <!-- Material 2 defines 12% alpha, primary color -->
        <item name="material_drawer_selected_legacy">@color/material_drawer_selected</item> <!-- Defines the color if legacy style (Material 1, is enabled) -->
        <item name="material_drawer_selected_text">@color/black</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>
        <item name="material_drawer_header_selection_subtext">@color/material_drawer_dark_header_selection_subtext</item>
        <item name="material_drawer_legacy_style">false</item> <!-- Enables legacy Material 1 style -->
    </style>

    <!-- Knob style -->
    <style name="AppTheme.knobs" parent="AppTheme">
        <item name="kKnobDrawable">@drawable/knob6</item>
        <item name="android:layout_width">@dimen/knob_size</item>
        <item name="android:layout_height">@dimen/knob_size</item>
        <item name="kAnimationBounciness">10</item>
        <item name="kAnimationSpeed">5</item>
        <item name="kShowBalloonValues">false</item>
        <item name="kBalloonValuesRelativePosition">0</item>
        <item name="kBalloonValuesTextSize">4sp</item>
        <item name="kBalloonValuesTimeToLive">0</item>
        <item name="kBorderWidth">0dp</item>
        <item name="kDefaultState">0</item>
        <item name="kFreeRotation">false</item>
        <item name="kIndicatorWidth">0dp</item>
        <item name="kKnobDrawableRotates">true</item>
        <item name="kMaxAngle">150</item>
        <item name="kMinAngle">-150</item>
        <item name="kNumberOfStates">101</item>
        <item name="kSelectedStateMarkerColor">@color/green_a200</item>
        <item name="kSelectedStateMarkerContinuous">true</item>
        <item name="kStateMarkersAccentColor">@color/grey_800</item>
        <item name="kStateMarkersAccentPeriodicity">10</item>
        <item name="kStateMarkersAccentRelativeLength">0.09</item>
        <item name="kStateMarkersAccentWidth">2dp</item>
        <item name="kStateMarkersWidth">1dp</item>
        <item name="kStateMarkersColor">@color/grey_800</item>
        <item name="kStateMarkersRelativeLength">0.08</item>
        <item name="kSwipe">circular</item>
        <item name="kSwipeSensitivityPixels">3</item>
    </style>

    <style name="AppTheme.carouselPicker" parent="AppTheme">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="items_visible">three</item>
    </style>

    <style name="AppTheme.textKnob" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.50</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
    </style>

    <style name="AppTheme.valueTextKnob" parent="AppTheme.textKnob">
        <item name="android:text">0</item>
        <item name="android:textColor">@color/green_a200</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.labelBlock">
        <item name="android:layout_width">@dimen/knob_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="knobBlock">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/knob_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="knobTable">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:stretchColumns">*</item>
    </style>

    <style name="empty_block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
