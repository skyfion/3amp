    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/amp_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:stl_indicatorAlwaysInCenter="true"
        app:stl_indicatorWithoutPadding="false"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="@color/amber_a700"
        app:stl_indicatorThickness="4dp"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_overlineColor="#4D000000"
        app:stl_overlineThickness="0dp"
        app:stl_underlineColor="#4D000000"
        app:stl_underlineThickness="1dp"
        app:stl_dividerColor="#4D000000"
        app:stl_dividerThickness="1dp"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="@color/design_default_color_on_primary"
        app:stl_defaultTabTextSize="12sp"
        app:stl_defaultTabTextHorizontalPadding="16dp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_distributeEvenly="false"
        app:stl_clickable="true"
        app:stl_titleOffset="24dp"
        app:stl_drawDecorationAfterTab="false"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/amp_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        style="@style/empty_block"
        android:layout_marginTop="?attr/actionBarSize"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <in.goodiebag.carouselpicker.CarouselPicker
                android:id="@+id/tabs_carousel"
                style="@style/AppTheme.carouselPicker" />
        </LinearLayout>

        <include
            android:id="@+id/tab_amp"
            layout="@layout/amp" />

        <include
            android:id="@+id/tab_compressor"
            layout="@layout/compressor"
            android:visibility="gone" />

        <include
            android:id="@+id/tab_effects"
            layout="@layout/effects"
            android:visibility="gone" />

        <include
            android:id="@+id/tab_delay"
            layout="@layout/delay"
            android:visibility="gone" />

        <include
            android:id="@+id/tab_reverb"
            layout="@layout/reverb"
            android:visibility="gone" />

        <include
            android:id="@+id/tab_gate"
            layout="@layout/gate"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>