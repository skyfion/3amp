<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:showIn="@layout/activity_main">

    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/block_margin_bottom"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:flexWrap="wrap">

        <LinearLayout style="@style/empty_block">

            <in.goodiebag.carouselpicker.CarouselPicker
                android:id="@+id/amp_carousel"
                style="@style/AppTheme.carouselPicker" />
        </LinearLayout>

        <LinearLayout style="@style/empty_block">

            <in.goodiebag.carouselpicker.CarouselPicker
                android:id="@+id/cab_carousel"
                style="@style/AppTheme.carouselPicker" />
        </LinearLayout>

        <TableLayout style="@style/knobTable">

            <TableRow>

                <LinearLayout style="@style/knobBlock">

                    <it.beppi.knoblibrary.Knob
                        android:id="@+id/gain_knob"
                        style="@style/AppTheme.knobs" />

                    <LinearLayout style="@style/AppTheme.labelBlock">

                        <TextView
                            style="@style/AppTheme.textKnob"
                            android:text="@string/gain" />

                        <TextView
                            android:id="@+id/gain_text"
                            style="@style/AppTheme.valueTextKnob" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout style="@style/knobBlock">
                    <it.beppi.knoblibrary.Knob
                        android:id="@+id/master_knob"
                        style="@style/AppTheme.knobs" />

                    <LinearLayout style="@style/AppTheme.labelBlock">

                        <TextView
                            style="@style/AppTheme.textKnob"
                            android:text="@string/master" />

                        <TextView
                            android:id="@+id/master_text"
                            style="@style/AppTheme.valueTextKnob" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout style="@style/knobBlock">

                    <it.beppi.knoblibrary.Knob
                        android:id="@+id/bass_knob"
                        style="@style/AppTheme.knobs" />

                    <LinearLayout style="@style/AppTheme.labelBlock">
                        <TextView
                            style="@style/AppTheme.textKnob"
                            android:text="@string/bass" />

                        <TextView
                            android:id="@+id/bass_text"
                            style="@style/AppTheme.valueTextKnob" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout style="@style/knobBlock">

                    <it.beppi.knoblibrary.Knob
                        android:id="@+id/middle_knob"
                        style="@style/AppTheme.knobs" />

                    <LinearLayout style="@style/AppTheme.labelBlock">

                        <TextView
                            style="@style/AppTheme.textKnob"
                            android:text="@string/middle" />

                        <TextView
                            android:id="@+id/middle_text"
                            style="@style/AppTheme.valueTextKnob" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout style="@style/knobBlock">

                    <it.beppi.knoblibrary.Knob
                        android:id="@+id/treble_knob"
                        style="@style/AppTheme.knobs" />

                    <LinearLayout style="@style/AppTheme.labelBlock">

                        <TextView
                            style="@style/AppTheme.textKnob"
                            android:text="@string/treble" />

                        <TextView
                            android:id="@+id/treble_text"
                            style="@style/AppTheme.valueTextKnob" />
                    </LinearLayout>

                </LinearLayout>

            </TableRow>

        </TableLayout>


    </com.google.android.flexbox.FlexboxLayout>
</FrameLayout>